<!-- app/views/products/index.html.erb -->
<h1>All Products</h1>
<div>
  <%= form_with url: products_path, method: :get, local: true do %>
    <%= label_tag :search, "Search Products" %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search" %>
  <% end %>
</div>
<div>
  <% ["Electronics", "Books", "Clothing", "Home Appliances"].each do |category| %>
    <%= link_to category, products_path(category: category) %> |
  <% end %>
</div>
<div>
  <%= link_to 'On Sale', products_path(filter: 'on_sale') %> |
  <%= link_to 'New', products_path(filter: 'new') %> |
  <%= link_to 'Recently Updated', products_path(filter: 'recently_updated') %>
</div>
<div>
  <% @products.each do |product| %>
    <div>
      <h2><%= link_to product.name, product_path(product) %></h2>
      <p><%= product.description.truncate(100) %></p>
      <p>Price: $<%= product.price %></p>
    </div>
  <% end %>
</div>
<div>
  <%= paginate @products %>
</div>
