<div class="container mt-5" style="max-width: 800px; padding: 0 15px;">
  <div class="card" style="width: 100%; margin: 0 auto; border-radius: 8px; overflow: hidden; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <!-- Image Section -->
    <div class="card-img-top" style="height: 300px; background-color: #f8f9fa; display: flex; align-items: center; justify-content: center; overflow: hidden;">
      <% if @product.image.attached? %>
        <%= image_tag @product.image, style: "width: 100%; height: 100%; object-fit: cover;" %>
      <% else %>
        <div style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; color: #6c757d;">
          <span>No Image Available</span>
        </div>
      <% end %>
    </div>
    <!-- Card Body -->
    <div class="card-body" style="padding: 20px;">
      <h1 class="card-title" style="font-size: 24px; margin-bottom: 10px; color: #343a40;"><%= @product.name %></h1>
      <p class="card-text" style="font-size: 16px; color: #495057;">
        <strong>Description:</strong>
        <%= @product.description.present? ? @product.description : 'No description available' %>
      </p>
      <p class="card-text" style="font-size: 16px; color: #495057;">
        <strong>Price:</strong> <%= number_to_currency(@product.price, unit: "$", delimiter: ",") %>
      </p>
      <div style="margin-top: 20px;">
        <%= link_to 'Back', products_path, class: "btn btn-secondary", style: "padding: 10px 20px; font-size: 16px;" %>
        <%#= link_to 'Edit', edit_product_path(@product), class: "btn btn-primary", style: "padding: 10px 20px; font-size: 16px; margin-left: 10px;" %>
      </div>
    </div>
  </div>
</div>
