<!-- app/views/carts/show.html.erb -->
<div class="container mt-5">
  <h1>Your Cart</h1>

  <% if @cart_items.empty? %>
    <p>Your cart is empty.</p>
  <% else %>
    <table class="table">
      <thead>
        <tr>
          <th>Product</th>
          <th>Quantity</th>
          <th>Price</th>
          <th>Total</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |item| %>
          <tr>
            <td><%= item[:product].name %></td>
            <td>
              <%= form_with url: update_quantity_cart_path(item[:product].id), method: :patch, local: true do %>
                <%= number_field_tag :quantity, item[:quantity], min: 1 %>
                <%= submit_tag 'Update', class: 'btn btn-primary' %>
              <% end %>
            </td>
            <td><%= number_to_currency(item[:product].price) %></td>
            <td><%= number_to_currency(item[:product].price * item[:quantity]) %></td>
            <td>
              <%= link_to 'Remove', remove_from_cart_cart_path(item[:product].id), class: 'btn btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <td colspan="3">Total</td>
          <td>
            <%= number_to_currency(@cart_items.sum { |item| item[:product].price * item[:quantity] }) %>
          </td>
          <td></td>
        </tr>
      </tfoot>
    </table>
  <% end %>
</div>

<%= link_to 'Products Page' , root_path%>
